@model ASPDotNET_Core_MVC_CRUD.Models.AddEmployeeViewModel
@{
}
<h2>Add Employee</h2>
<form method="post" action="Add" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">First Name</label>
        <input type="text" class="form-control" id="" asp-for="Fname">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Last Name</label>
        <input type="text" class="form-control" id="" asp-for="Lname">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Email :</label>
        <input type="email" class="form-control" id="" asp-for="Email">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Salary</label>
        <input type="number" class="form-control" id="" asp-for="Salary">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Date Of Birth</label>
        <input type="date" class="form-control" id="" asp-for="DateOfBirth">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Department</label>
        <input type="text" class="form-control" id="" asp-for="Department">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>